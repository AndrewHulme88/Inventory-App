<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Car Inventory</title>
    <link rel="stylesheet" href="/styles/styles.css">
  </head>
  <body>
    <h1>Car Inventory</h1>

    <nav>
      <a href="/">Home</a>
      <a href="/cars">Car Inventory</a>
      <a href="/cars/add">Add a Car</a>
    </nav>

    <ul>
      <% cars.forEach(car => { %>
        <li>
          <strong><%= car.make %> <%= car.model %> (<%= car.year %>)</strong>
          <form action="/cars/delete/<%= car.id %>" method="post" style="display:inline;">
            <button type="submit">Delete</button>
          </form>
          <a href="/cars/edit/<%= car.id %>"><button>Edit</button></a>
        </li>
      <% }); %>
    </ul>
  </body>
</html>
