<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Car Inventory</title>
    <link rel="stylesheet" href="/styles/styles.css">
  </head>
  <body>
    <h1>Car Inventory</h1>

    <nav>
      <a href="/">Home</a>
      <a href="/cars">Car Inventory</a>
    </nav>

    <ul>
      <% cars.forEach(car => { %>
        <li>
          <strong><%= car.make %> <%= car.model %> (<%= car.year %>)</strong>
          <form action="/cars/delete/<%= car.id %>" method="post" style="display:inline;">
            <button type="submit">Delete</button>
          </form>
          <a href="/cars/edit/<%= car.id %>"><button>Edit</button></a>
        </li>
      <% }); %>
    </ul>

    <h2>Add a New Car:</h2>
    <form action="/cars/add" method="POST">
      <label for="make">Make:</label>
      <input type="text" name="make" required><br>

      <label for="model">Model:</label>
      <input type="text" name="model" required><br>

      <label for="year">Year:</label>
      <input type="number" name="year" required><br>

      <button type="submit">Add Car</button>
    </form>
  </body>
</html>
